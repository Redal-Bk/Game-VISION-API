@using System.Security.Claims
<link href="~/321654987846985749674967.ico" rel="icon" type="image/x-icon" />
<nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
        <a class="navbar-brand" href="index.html">
            <i class="bi bi-controller"></i> GameVision
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home">خانه</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game">بازی‌ها</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/News">اخبار</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Profile">پروفایل</a>
                </li>
            </ul>
            <div class="d-flex align-items-center gap-3">
                <input type="search" class="search-box" placeholder="جستجوی بازی...">

                @* اگر کاربر لاگین کرده باشه *@
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="d-flex align-items-center gap-3">
                        @if (User.FindFirst("urn:discord:avatar")?.Value is string avatarHash &&
                                            User.FindFirst(ClaimTypes.NameIdentifier)?.Value is string discordId)
                        {
                            <img src="https://cdn.discordapp.com/avatars/@(User.FindFirst(ClaimTypes.NameIdentifier)?.Value)/@(User.FindFirst("urn:discord:avatar")?.Value).png?size=64"
                                 style="border-radius:50%; width:64px; vertical-align:middle;"
                                 alt="Avatar" />
                        }
                        else
                        {
                            @* اگر آواتار نداشت (مثلاً کاربر معمولی بدون دیسکورد) *@
                            <img src="https://cdn.discordapp.com/embed/avatars/0.png" class="rounded-circle" width="40" height="40" alt="Avatar" />
                        }

                        <div class="d-flex flex-column">
                            <span class="fw-bold">@User.FindFirst(ClaimTypes.Name)?.Value</span>
                            @* اگر بخوای ایمیل یا چیز دیگه هم نشون بدی *@
                            @* <small class="text-muted">@User.FindFirst(ClaimTypes.Email)?.Value</small> *@
                        </div>

                        @* لینک خروج (اختیاری) *@
                        <a href="/Account/Logout" class="btn btn-sm btn-outline-danger">خروج</a>
                    </div>
                }
                else
                {
                    @* اگر لاگین نکرده باشه *@
                    <a href="/Account" class="btn btn-neon">ورود / ثبت‌نام</a>
                }
            </div>
        </div>
    </div>
</nav>
@RenderBody()
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <h5 class="mb-3">
                    <i class="bi bi-controller"></i> GameVision
                </h5>
                <p class="text-secondary">بزرگترین پلتفرم گیمینگ فارسی با اخبار، بررسی‌ها و اطلاعات کامل بازی‌ها</p>
            </div>
            <div class="col-md-4 mb-4">
                <h6 class="mb-3">لینک‌های سریع</h6>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="/Home" class="footer-link">خانه</a></li>
                    <li class="mb-2"><a href="/Game" class="footer-link">بازی‌ها</a></li>
                    <li class="mb-2"><a href="/News" class="footer-link">اخبار</a></li>
                    <li class="mb-2"><a href="/Profile" class="footer-link">پروفایل</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-4">
                <h6 class="mb-3">شبکه‌های اجتماعی</h6>
                <div class="d-flex gap-3">
                    <a href="https://instagram.com/Gamevision" class="footer-link fs-4"><i class="bi bi-instagram"></i></a>
                    <a href="https://t.me/Gamevision" class="footer-link fs-4"><i class="bi bi-telegram"></i></a>
                    <a href="https://google.com" class="footer-link fs-4"><i class="bi bi-discord"></i></a>
                </div>
            </div>
        </div>
        <hr style="border-color: var(--border-color);">
        <div class="text-center text-secondary">
            <p>&copy; 2026 GameVision. تمامی حقوق محفوظ است.</p>
        </div>
    </div>
</footer>